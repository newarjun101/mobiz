<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg_color"
    android:paddingHorizontal="@dimen/defaultPadding"
    android:paddingVertical="8dp"
    android:gravity="left|center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/poster_image_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType= "fitXY"
        android:padding="8dp"
        android:src="@drawable/logo"
        />
    <TextView
        android:id="@+id/home_app_bar_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:textAlignment="textStart"
        style="@style/LargeTitleTextStyle"
        android:text="@string/app_name"
        />

    <EditText
        android:id="@+id/home_serch_field"
        android:layout_marginHorizontal="@dimen/defaultPadding"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:imeOptions="actionSearch"
        android:autofillHints=""
        android:enabled="true"
        android:inputType="text"
        android:textSize="@dimen/hint_text_size"
        android:textColorHint="@color/hint_text_color"
        android:textColor="@color/white"
        android:layout_height="36dp"
        android:hint="@string/search_here"
        android:maxLines="1"
        android:textCursorDrawable="@drawable/cusor_style"
        android:focusableInTouchMode="false"
        android:drawableRight="@drawable/ic_search"
        android:drawableTint="@color/hint_text_color"
        android:background="@drawable/edit_text_style"
        />

</LinearLayout>